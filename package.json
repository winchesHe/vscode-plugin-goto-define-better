{
  "publisher": "winches",
  "name": "mixins-helper",
  "displayName": "mixins-helper",
  "version": "1.0.0",
  "private": true,
  "description": "enhance vue2 mixins develop experience",
  "author": "winches",
  "license": "MIT",
  "repository": {
    "type": "git",
  },
  "categories": [
    "Other"
  ],
  "icon": "res/logo.png",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.69.0"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:vue"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "mixins 跳转配置",
      "properties": {
        "mixins-helper.activeHeight": {
          "type": "boolean",
          "default": false,
          "description": "高亮 mixins 内容"
        },
        "mixins-helper.activeReload": {
          "type": "boolean",
          "default": false,
          "description": "热更新该文件引入 mixins 内容（会消耗性能）"
        },
        "mixins-helper.hoverTips": {
          "type": "boolean",
          "default": true,
          "description": "鼠标 Hover 时出现该 mixins 内容提示"
        },
        "mixins-helper.alias": {
          "type": "object",
          "description": "路径别名映射"
        }
      }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@antfu/ni": "^0.17.2",
    "@types/node": "^18.6.4",
    "@types/vscode": "^1.69.0",
    "acorn": "^8.10.0",
    "acorn-walk": "^8.2.0",
    "eslint": "^8.21.0",
    "rimraf": "^3.0.2",
    "tsup": "^6.2.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.21.0",
    "vsce": "^2.10.0"
  }
}
